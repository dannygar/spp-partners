<UserControl x:Class="Spp.Presentation.User.Client.UserControls.CreateNewTileUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="400">

    <Grid Style="{StaticResource StandardTileContainer}"
          VerticalAlignment="Top"
          HorizontalAlignment="Left"
          Background="#FF014880"
          Visibility="Visible">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Image Source="ms-appx:///Assets/Images/Icons/Plus_Circle.png"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"
               Width="100"
               Height="100" />
        <Border Grid.Row="1"
                BorderBrush="White"
                BorderThickness="0,1,0,0">
            <TextBlock Style="{StaticResource Paragraph}"
                       Text="Create New Workout Plan"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="0" />
        </Border>
    </Grid>
</UserControl>
