<UserControl
    x:Class="MicrosoftSportsScience.UserControls.CameraControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="420"
    d:DesignWidth="480">

    <Grid>
        <CaptureElement x:Name="webCamCaptureElement" FlowDirection="RightToLeft" />
        <Canvas x:Name="FaceTrackingVisualizationCanvas" FlowDirection="RightToLeft" />

        <Grid x:Name="commandBar" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="2" >
            <Button Opacity="0.8" HorizontalAlignment="Center" VerticalAlignment="Bottom" Background="{ThemeResource SystemControlBackgroundChromeBlackHighBrush}" BorderBrush="Transparent" Click="CameraControlButtonClick" >
                <SymbolIcon x:Name="cameraControlSymbol" Foreground="{ThemeResource SystemControlBackgroundChromeWhiteBrush}" Margin="6" Symbol="Camera"></SymbolIcon>
            </Button>
        </Grid>
    </Grid>

</UserControl>
