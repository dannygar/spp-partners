<UserControl
    x:Class="MicrosoftSportsScience.UserControls.PlayersAssignedUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MicrosoftSportsScience.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <StackPanel Orientation="Horizontal">
        <Grid Margin="0,6"
              Height="50"
              Width="50">
            <Ellipse Fill="{StaticResource TileBGBlueBlueBrush}"
                     VerticalAlignment="Stretch"
                     HorizontalAlignment="Stretch"/>
            <TextBlock Text="{Binding InitialLetter}"
                       Margin="0,0,0,6"
                       FontSize="38"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center" />
        </Grid>
        <TextBlock Text="{Binding Title}"
                   Margin="10,0,0,0"
                   VerticalAlignment="Center" />
    </StackPanel>
    
</UserControl>
