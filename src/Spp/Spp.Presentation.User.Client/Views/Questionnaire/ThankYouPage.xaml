<Page
    x:Class="Spp.Presentation.User.Client.ThankYouPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        
    </Page.Resources>
    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="UniformToFill" ImageSource="ms-appx:///Assets/Images/SignIn_BG.jpg" />
        </Grid.Background>
        <TextBlock x:Name="SignInText" Text="Thank you! Your answers have been recorded." Foreground="White" FontSize="40" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock.Resources>
                <Storyboard x:Name="BlinkStoryboard">
                    <DoubleAnimation d:IsOptimized="True" Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="SignInText" From="0" To="1" AutoReverse="False" Duration="0:0:1.5"/>
                </Storyboard>
            </TextBlock.Resources>
        </TextBlock>
    </Grid>
</Page>
