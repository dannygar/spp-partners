    <Style x:Key="SpeedometerImageStyle" TargetType="Image">
        <Setter Property="Source" Value="ms-appx:///Assets/Images/speedometer.png" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="Height" Value="30" />
        <Setter Property="Width" Value="54" />
    </Style>

    <!--Icons-->
    <Style x:Key="SessionIconStyle" TargetType="Image">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="Height" Value="18" />
        <Setter Property="Width" Value="18" />
        <Setter Property="Margin" Value="0,0,10,0" />
    </Style>

    <Style x:Key="IconBaseStyle" TargetType="Image">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Right" />
        <Setter Property="Height" Value="20" />
        <Setter Property="Width" Value="20" />
