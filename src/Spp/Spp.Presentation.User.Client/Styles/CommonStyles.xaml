<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:helpers="using:Spp.Presentation.User.Client.Helpers">

    <SolidColorBrush x:Key="ApplicationDefaultBrush" Color="#d7d7d7"></SolidColorBrush>
    
    <SolidColorBrush x:Key="DefaultTeamColor" Color="#00b13f"></SolidColorBrush>
    <SolidColorBrush x:Key="NavButtonSelectedColor" Color="#000000"></SolidColorBrush>

    <SolidColorBrush x:Key="TableOddColumnBackground" Color="#f9f9f9" />
    <SolidColorBrush x:Key="TableEvenColumnBackground" Color="#ffffff" />

    <SolidColorBrush x:Key="ApplicationBackground" Color="#f0f0f0" />
    <SolidColorBrush x:Key="ApplicationControlsFooterBackground" Color="#d7d7d7" />

    <x:Double x:Key="CompactPaneLength">68</x:Double>

    <!--TODO: use default-coach.png-->
    <BitmapImage x:Key="DefaultCoachImage" UriSource="ms-appx:///Assets/Images/Menu/temp_coach.gif"/>

    <BitmapImage x:Key="DefaultTeamLogo" UriSource="ms-appx:///Assets/Images/group-icon.png"/>
    <BitmapImage x:Key="DefaultAppLogo" UriSource="ms-appx:///Assets/Images/SportsPerformance-App-Logo_Large.png"/>

    <!--TODO: Refactor. Currently some controls require the string, not image or uri.-->
    <x:String x:Key="DefaultTeamLogoPath">ms-appx:///Assets/Images/group-icon.png</x:String>

    <LinearGradientBrush x:Key="BlueGradient" EndPoint="0.5,1" StartPoint="0.5,0">
        <LinearGradientBrush.GradientStops>
            <GradientStopCollection>
                <GradientStop Color="#FF24447D" Offset="0" />
                <GradientStop Color="#FF102E54" Offset="1" />
            </GradientStopCollection>
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="GrayGradient" EndPoint="1,0" StartPoint="0,0">
        <LinearGradientBrush.GradientStops>
            <GradientStopCollection>
                <GradientStop Color="#FF292929" />
                <GradientStop Color="#FF333333" Offset="1" />
            </GradientStopCollection>
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>

    <Storyboard x:Name="ImageVisible">
        <DoubleAnimation Duration="0:0:0.2"
                         To="1"
                         Storyboard.TargetProperty="(UIElement.Opacity)"
                         Storyboard.TargetName="image" />
    </Storyboard>

    <Style TargetType="ScrollViewer">
        <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
    </Style>

    <Style TargetType="ComboBox">
        <Setter Property="Foreground" Value="{StaticResource BasicWhiteColorBrush}" />
        <Setter Property="Background" Value="{StaticResource DarkAccentBlueBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource BasicWhiteColorBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Template" Value="{StaticResource DefaultComboBoxControlTemplate}" />
    </Style>

    <Style TargetType="Border" x:Key="SidebarBorder">
        <Setter Property="BorderThickness" Value="0,0,0,1" />
        <Setter Property="Margin" Value="0,10" />
        <Setter Property="BorderBrush" Value="{StaticResource BasicWhiteColorBrush}" />
    </Style>

    <Style x:Key="VariableSizedWrapGridStyle" TargetType="VariableSizedWrapGrid">
        <Setter Property="Orientation" Value="Horizontal" />
        <Setter Property="MaximumRowsOrColumns" Value="4" />
    </Style>

    <Style x:Key="VariableSizedWrapFixedGridStyle" TargetType="VariableSizedWrapGrid" BasedOn="{StaticResource VariableSizedWrapGridStyle}">
        <Setter Property="Height" Value="300" />
        <Setter Property="Width" Value="300" />
    </Style>

    <Style x:Key="IntensityIndicatorStyle" TargetType="Image">
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="Height" Value="10" />
        <Setter Property="Margin" Value="4,10,0,0" />
