                                        </ObjectAnimationUsingKeyFrames>
                                        <PointerDownThemeAnimation Storyboard.TargetName="RootGrid" />
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="CheckedDisabled">
                                    <VisualState.Setters>
                                        <Setter Target="CarrotImg.(UIElement.RenderTransform).(CompositeTransform.Rotation)"
                                                Value="0" />
                                    </VisualState.Setters>
