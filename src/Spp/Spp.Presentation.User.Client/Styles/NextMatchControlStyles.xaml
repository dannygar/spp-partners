<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MicrosoftSportsScience.Styles">
    
    <Style x:Key="MatchResultTitle" TargetType="TextBlock" >
        <Setter Property="Foreground" Value="#ffffff" />
        <Setter Property="FontSize" Value="20" />
    </Style>

    <SolidColorBrush x:Key="MatchResultWinColor" Color="#00b13f"></SolidColorBrush>
    <SolidColorBrush x:Key="MatchResultLoseColor" Color="#b13f00"></SolidColorBrush>
    <SolidColorBrush x:Key="MatchResultDrawColor" Color="#d7d7d7"></SolidColorBrush>
    <SolidColorBrush x:Key="MatchHistoryColumnBackgroundColor" Color="#f0f0f0" />

    <SolidColorBrush x:Key="NextMatchLogosPolygonColor" Color="#AFAFAF" />

    <SolidColorBrush x:Key="NextMatchControlBackground" Color="#ffffff" />

</ResourceDictionary>
